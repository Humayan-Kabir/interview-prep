class Solution {
public:
    int numOfSubarrays(vector<int>& arr, int k, int threshold) {
        int sum = 0;
        int ans = 0;
        for(int i = 0, left = 0; i < arr.size(); i++) {
            sum += arr[i];
            int len = i - left + 1;
            if (len < k) {
                continue;
            }
            else if (len > k) {
                sum -= arr[left++];
            }
            ans += (sum / k >= threshold);
        }
        return ans;      
    }
};